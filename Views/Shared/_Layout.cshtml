        }

        .logonavbar {
            height: 60px;
            width: auto;
            padding-right: 15px;
        }

        ul {
            list-style-type: none;
            padding: 0;
            display: flex; /* تعديل العرض لصف واحد */
            align-items: center;
            justify-content: flex-end;
            margin: 0;
        }

        li {
            display: inline;
            color: #333; /* تعديل لون النص */
            text-decoration: none;
            margin-left: 15px;
            margin-right: 15px;
        }

            li a {
                text-decoration: none;
                color: #333; /* تعديل لون النص */
                position: relative;
            }

                li a:before {
                    content: "";
                    position: absolute;
                    width: 100%;
                    height: 2px;
                    bottom: 0;
                    left: 0;
                    background-color: #333; /* تعديل لون الخط */
                    visibility: hidden;
                    transform: scaleX(0);
                    transition: all 0.3s ease-in-out 0s;
                }

                li a:hover {
                    color: #ff9c00;
                    transition-duration: 0.8s;
                }

                    li a:hover:before {
                        visibility: visible;
                        transform: scaleX(1);
                    }

                li a:active {
                    text-decoration: underline;
                }

        #box1 {
            height: 100vh;
            width: 100%;
            background-image: url("https://i.postimg.cc/44tf5wbs/image.webp");
            background-size: cover;
            display: table;
            background-attachment: fixed;
        }

        .text {
            width: 50%;
            text-align: center;
            position: absolute;
            top: 50%;
            left: 50%;
            color: white;
            transform: translate(-50%, -50%);
        }

        #box2, #box3, #box4 {
            height: 100vh;
            width: 100%;
            background-size: cover;
            display: table;
            background-attachment: fixed;
        }

        .grid-container {
            display: flex; /* تعديل العرض لصف واحد */
            overflow-x: auto;
            gap: 15px;
            padding: 20px;
        }

        .grid-item {
            background-color: #fff; /* تعديل لون الخلفية */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* تعديل الظل */
            transition: transform 0.3s, box-shadow 0.3s;
            flex: 0 0 auto; /* تثبيت العرض */
            width: 300px; /* تحديد عرض العنصر */
        }

            .grid-item:hover {
                transform: translateY(-10px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* تعديل الظل */
            }

            .grid-item img {
                width: 100%;
                height: auto;
                border-radius: 10px 10px 0 0;
            }

            .grid-item h2 {
                font-size: 24px;
                margin: 10px 0;
                color: #000957;
            }

            .grid-item p {
                font-size: 16px;
                margin: 0;
                color: #666;
            }

        .navbar .nav-link {
            display: flex;
            align-items: center;
        }

        .navbar .fas {
            margin-left: 5px;
        }

        .container {
            margin-top: 30px; /* إضافة مسافة بين الهيدر والمحتوى */
        }
