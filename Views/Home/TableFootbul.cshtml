@model IEnumerable<TableFootbul>
@{
}

<div class="container">
    <div class="text-center">
        <h1 class="alert" style="background-color: #27634c; color: white;"><strong>جدول المباريات</strong></h1>
        <div class="row">
            <div class="col-sm-8"></div>
            <div class="col-sm-4 sm-12"></div>
        </div>
    </div>
</div>
<div class="container mt-5" dir="rtl">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <table class="table table-hover table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>الملعب</th>
                                <th>المكان</th>
                                <th>الفريق الأول</th>
                                <th>الفريق الثاني</th>
                                <th>الوقت وتاريخ المباراة</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var pr in Model)
                            {
                                <tr>
                                    <td>@pr.Name</td>
                                    <td>@pr.Ctiy</td>
                                    <td>@pr.Ateam1</td>
                                    <td>@pr.Ateam2</td>
                                    <td>@pr.MatchTime</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .table {
        background-color: white;
    }

    .thead-dark {
        background-color: #27634c;
        color: white;
    }

    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }

    .table-bordered {
        border: 1px solid #dee2e6;
    }

    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 20px;
    }
</style>

